@{
    Layout = null;
}
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Access-Control-Allow-Origin" content="*" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="format-detection" content="telephone=no" />
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/css/index.css" rel="stylesheet" />
    <link href="~/Content/css/iconfont.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Microsoft YaHei';
        }

        .layui-icon.layui-icon-group {
            font-size: 14px !important;
        }

        .header .layui-nav .layui-nav-item a {
        }

            .header .layui-nav .layui-nav-item a:hover {
                background: #3490de;
            }

        .header .layui-nav .layui-this a {
            background: #07689f;
        }

        .layui-layout-admin .layui-header .layui-nav .layui-this:after, .layui-layout-admin .layui-header .layui-nav-bar {
            background: transparent;
        }
    </style>
</head>
<body class="main_body">
    <div class="layui-layout layui-layout-admin">
        <!-- 顶部 -->
        <div class="layui-header header">
            <div class="layui-main mag0">
                <a href="#" class="logo">系统管理</a>
                <!-- 显示/隐藏菜单 -->
                <a href="javascript:;" class="seraph hideMenu icon-caidan"></a>
                <!-- 顶部右侧菜单 -->
                <ul class="layui-nav top_menu" id="ulTopmenu"></ul>
                <ul class="layui-nav layui-layout-right user_menu">
                    <li class="layui-nav-item">
                        <a href="javascript:;">
                            <img src="~/Content/image/head.png" class="layui-nav-img" alt="" />
                            <span id="yhzh">
                               @ViewBag.UserName
                            </span>
                            <dl class="layui-nav-child">
                                <dd>
                                    <a href="javascript:;" id="btnPasseord">修改密码</a>
                                </dd>
                                <dd>
                                    <a href="javascript:;" class="clearCache">清除缓存</a>
                                </dd>
                            </dl>
                        </a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="logout.aspx" class="signOut"><i class="seraph icon-tuichu"></i><cite>安全退出</cite></a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- 左侧导航 -->
        <div class="layui-side layui-side-menu">
            <div class="navBar layui-side-scroll" id="navBar">
                <ul class="layui-nav layui-nav-tree" lay-filter="navTree">
                    <li class="layui-nav-item layui-this"></li>
                </ul>
            </div>
        </div>
        <!-- 右侧内容 -->
        <div class="layui-body layui-form">
            <div class="layui-tab mag0" lay-filter="bodyTab" id="top_tabs_box">
                <ul class="layui-tab-title top_tab" id="top_tabs">
                    <li class="layui-this" lay-id=""><i class="layui-icon">&#xe68e;</i> <cite>后台首页</cite></li>
                </ul>
                <ul class="layui-nav closeBox">
                    <li class="layui-nav-item">
                        <a href="javascript:;"><i class="layui-icon caozuo">&#xe643;</i> 系统功能</a>
                        <dl class="layui-nav-child">

                            <dd>
                                <a href="javascript:;" class="refresh refreshThis"><i class="layui-icon layui-icon-refresh-3"></i>刷新当前</a>
                            </dd>
                            <dd>
                                <a href="javascript:;" class="closePageOther">
                                    <i class="seraph icon-prohibit"></i>关闭其他
                                </a>
                            </dd>
                            <dd>
                                <a href="javascript:;" class="closePageAll"><i class="seraph icon-prohibit"></i>关闭全部</a>
                            </dd>
                        </dl>
                    </li>
                </ul>
                <div class="layui-tab-content clildFrame">
                    <div class="layui-tab-item layui-show">
                        <iframe id="secif"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 移动导航 -->
    <div class="site-tree-mobile"><i class="layui-icon">&#xe602;</i></div>
    <div class="site-mobile-shade"></div>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Controljs/common.js"></script>
    <script src="~/Controljs/Home/index.js"></script>
    <script src="~/Controljs/sys/cache.js"></script>
</body>
</html>