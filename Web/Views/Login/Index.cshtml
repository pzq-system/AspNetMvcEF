
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml" class="fixed accounts sign-in">

<head runat="server">
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        登录
    </title>
    <link href="~/Content/css/bootstrap.min.css?rd=1" rel="stylesheet" />
    <link href="~/Content/css/animate.css?rd=1" rel="stylesheet" />
    <link href="~/Content/font/css/font-awesome.css?rd=1" rel="stylesheet" />
    <link href="~/Content/css/style.css?rd=2" rel="stylesheet" />
    <link href="~/Content/css/login.css?rd=1" rel="stylesheet" />
    <style>
        body {
            font-family: 'Microsoft YaHei';
        }
    </style>
</head>

<body>
    <div class="Back">
        <div class="page-body animated slideInDown">
            <div class="login-aside ">
                <div class="loginBox box-center-v">
                    <div class="column-right box-flex">
                        <div class="loginfrom">
                            <div class="title-row">
                                <h3>欢迎登录</h3>
                            </div>
                            <div class="from">
                                <ul class="from-list clearfix">
                                    <li class="from-item">
                                        <input type="text" id="txtUsername" name="txtUsername" placeholder="帐号" class="input-txt" maxlength="6" />
                                        <em class="input-icon"></em>
                                    </li>
                                    <li class="from-item">
                                        <input type="text" id="txtPassword" name="txtPassword" placeholder="密码" class="input-txt" maxlength="20" />
                                        <em class="input-icon password-icon"></em>
                                    </li>
                                    <li class="from-item" id="liValidateCode">
                                        <input type="text" id="txtCode" name="code" placeholder="验证码" class="input-txt pull-left" maxlength="4" />
                                        <em class="input-icon code-icon"></em>
                                        <div class="codeImg pull-right">
                                            <img src="/Login/VerificationCode" alt="验证码" title="点我刷新" id="imgCode" />
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="loginbar">
                                <button type="button" id="btnLogin">登 录</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <span>推荐浏览器：Chrome</span>
            <span>推荐屏幕分辨率：1920 * 1080</span>
        </div>
    </div>
</body>
</html>
