@{
    ViewBag.Title = "菜单信息";
}
<!DOCTYPE html>

<div class="layui-form">
    <blockquote class="layui-elem-quote quoteBox">
        <div class="layui-form">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input type="text" id="MenuName" placeholder="请输入菜单名称" class="layui-input" maxlength="30" />
                </div>
            </div>
            <div class="layui-inline">
                <button class="layui-btn search_btn" id="btnSearch">查询</button>
            </div>
            <div class="layui-inline">
                <button class="layui-btn layui-btn-normal" id="btnAdd">添加菜单</button>
            </div>
            <div class="layui-inline">
                <button class="layui-btn layui-btn-primary" id="btnClose">关闭窗口</button>
            </div>
        </div>
    </blockquote>
    <table id="layerTables" lay-filter="layerTables"></table>
    <input id="hdSystemCoding" type="hidden" name="SystemCoding" />
    <input id="hdParentMenu" type="hidden" name="ParentMenu" />
    <input id="hdParentMenuName" type="hidden" />

</div>

@section Scripts {
    @Html.Script("~/Areas/system/Controljs/Menu/GetMenu.js")
}