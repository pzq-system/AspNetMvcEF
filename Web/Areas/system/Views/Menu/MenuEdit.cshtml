@{
    ViewBag.Title = "菜单编辑";
}

<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-card-body" style="padding: 15px;">
            <form class="layui-form" action="" lay-filter="component-form-group">
                <div class="layui-form-item">
                    <label class="layui-form-label">系统名称</label>
                    <div class="layui-input-block">
                        <select id="SystemCoding" lay-verify="required" name="SystemCoding" lay-filter="drpXtbm">
                            <option value="">请选择系统</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">菜单类别</label>
                    <div class="layui-input-block">
                        <input type="text" id="MenuCategroy" autocomplete="off" class="layui-input" maxlength="30">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">菜单名称</label>
                    <div class="layui-input-block">
                        <input type="text" id="MenuName" name="MenuName" lay-verify="required" lay-reqText="请输入菜单名称" autocomplete="off" placeholder="请输入菜单名称" class="layui-input" maxlength="30">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">菜单地址</label>
                    <div class="layui-input-block">
                        <input type="text" id="MenuAddress" name="MenuAddress" lay-verify="required" lay-reqText="请输入菜单地址" autocomplete="off" placeholder="请输入菜单地址" class="layui-input" maxlength="100">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">菜单排序</label>
                    <div class="layui-input-block">
                        <input type="text" id="Sorting" name="Sorting" lay-verify="required|number" lay-reqText="请输入菜单排序" placeholder="请输入菜单排序" autocomplete="off" class="layui-input" maxlength="5">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">菜单图标</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Icon" name="Icon" lay-verify="required" lay-reqText="请输入菜单图标" placeholder="请输入菜单图标" autocomplete="off" class="layui-input" maxlength="30">
                    </div>
                    <div class="layui-inline">
                        <a class="layui-btn layui-btn-normal" id="btnIcon">选择图标</a>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" lay-submit lay-filter="btnSave" id="btnSave">提交数据</button>
                        <button type="button" class="layui-btn layui-btn-primary" id="btnClose">关闭窗口</button>
                    </div>
                </div>
                
                <input id="hdId" type="hidden" name="Id" />
                <input id="hdSystemCoding" type="hidden" />
                <input id="hdParentMenu" type="hidden" name="ParentMenu" />
            </form>
        </div>
    </div>

    @section Scripts {
        @Html.Script("~/Areas/system/Controljs/Menu/MenuEdit.js")
    }
